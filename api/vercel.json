{
    "version": 2,
    "builds": [
        {
            "src": "backend/package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["backend/**"]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/server.ts" 
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}